

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/manage-email-accounts.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="logo-container">
                <img src="~/images/logo.png" alt="MailCrafter" class="logo" />
            </div>

            <div class="nav-items">
                <a href="/" class="nav-item">
                    <i class="icon-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/job-monitor" class="nav-item">
                    <i class="icon-monitor"></i>
                    <span>Job Monitor</span>
                </a>
                <a href="/insights" class="nav-item">
                    <i class="icon-insights"></i>
                    <span>Insights</span>
                </a>
                <div class="nav-group">
                    <a href="#" class="nav-item with-arrow">
                        <i class="icon-management"></i>
                        <span>Management</span>
                    </a>
                    <div class="subnav">
                        <a href="/management/email-accounts" class="nav-item">Email Accounts</a>
                        <a href="/management/email-templates" class="nav-item">Email Templates</a>
                        <a href="/management/groups" class="nav-item">Groups</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <header class="top-bar">
                <div class="dropdown-container">
                    <select class="custom-select">
                        <option>M365vx047293</option>
                    </select>
                </div>
                <div class="header-controls">
                    <button class="btn-help">?</button>
                    <button class="btn-language">admin</button>
                    <form id="logout-form" style="display:none;">
                        <input name="__RequestVerificationToken" type="hidden" value="@Antiforgery.GetTokens(Context).RequestToken" />
                    </form>
                    <button type="button" class="btn-logout" onclick="logout()">Logout</button>
                </div>
            </header>

            <div class="content-wrapper">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



