@model MailCrafter.Domain.AppUserEntity

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MailCrafter</title>
    <link rel="stylesheet" href="~/css/loading.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="auth">
        <div class="auth__container">
            <div class="auth__hero">
                <div class="auth__hero--inner">
                    <h2 class="auth__hero--title">Let's explore the world with us</h2>
                    <img src="~/images/auth-hero.png" alt="Hello there" class="auth__hero--img" />
                </div>
            </div>
            <div class="auth__content">
                <div class="login-container">
                    <div class="login-box">
                        <div class="mb-3 text-center">
                            <img src="~/images/logo.png" alt="MailCrafter Logo" class="img-fluid" style="max-height: 60px;" />
                        </div>
                        <h1 class="auth__content--title py-2">Log in</h1>
                        <form method="post" onsubmit="login(event)">
                            <div class="form-group">
                                <label class="form-label" for="Username">Username or Email</label>
                                <input required placeholder="Username or Email..." class="form-control" id="Username" />
                                <span class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="Password">Password</label>
                                <div class="password-container">
                                    <input required placeholder="Password..." type="password" class="form-control" id="Password" />
                                    <button type="button" onclick="viewPassword()" class="toggle-password">
                                        <i class="eye-icon"></i>
                                    </button>
                                </div>
                                <span class="text-danger"></span>
                            </div>  
                            <div id="login_error" class="text-danger" style="margin : 10px; display: none;"></div>
                            <div class="auth-text__box">
                                <a class="auth-text__content auth-text__content--bold" href="/forgot-password">Forgot password?</a>
                            </div>
                            <button type="submit" class="btn-login">Log in</button>
                            <div class="auth-text__box">
                                <p class="auth-text__content">Don't have an account? <a class="auth-text__content--bold" href="/register">Sign Up</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>
