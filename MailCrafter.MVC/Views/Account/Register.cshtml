@model MailCrafter.Domain.AppUserEntity

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MailCrafter</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400..800&display=swap" rel="stylesheet">
</head>
<body>
    <div class="auth">
        <div class="auth__container">
            <div class="auth__hero">
                <div class="auth__hero--inner">
                    <h2 class="auth__hero--title">Welcome to our travel guide</h2>
                    <img src="~/images/register-hero.png" alt="Hello there" class="auth__hero--img" />
                </div>
            </div>
            <div class="auth__content">
                <div class="login-container">
                    <div class="login-box">
                        <h1 class="auth__content--title">Register</h1>
                        <form id="register-form" method="post" onsubmit="registerUser(event)">
                            <div class="form-group">
                                <label class="form-label" for="username">Username</label>
                                <input placeholder="Username..." id="username" required name="username" class="form-control" />
                                <span id="username-error" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="email">Email</label>
                                <input placeholder="Email..." id="email" required name="email" class="form-control" />
                                <span id="email-error" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="password">Password</label>
                                <input placeholder="Password..." id="password" name="password" required type="password" class="form-control" />
                                <span id="password-error" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn-login">Register</button>
                            <div class="auth-text__box">
                                <p class="auth-text__content">Have an account? <a class="auth-text__content--bold" href="/login">Sign In</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
