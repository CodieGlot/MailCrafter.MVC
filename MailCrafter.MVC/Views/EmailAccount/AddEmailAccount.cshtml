@model MailCrafter.MVC.Models.EmailAccount.AddEmailAccountViewModel


@{
    ViewData["Title"] = "Add Email Account";
}

<div class="add-email-account-container">
    <h1>Add Email Account</h1>
    <form id="add-email-account-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email" class="form-control" />
            <span id="email-error" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="alias">Alias</label>
            <input id="alias" name="alias" class="form-control" />
            <span id="alias-error" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="appPassword">App Password</label>
            <input id="appPassword" name="appPassword" type="password" class="form-control" />
            <span id="appPassword-error" class="text-danger"></span>
        </div>

        <button type="button" class="btn btn-primary" onclick="addEmailAccount()">Add Email Account</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}
