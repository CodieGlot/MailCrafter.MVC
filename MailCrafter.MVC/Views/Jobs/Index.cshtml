<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Email Job</h4>
                </div>
                <div class="card-body">
                    <form id="emailJobForm">
                        <div class="row g-3">
                            <!-- Template Selection -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="templateSelect" class="form-label">Email Template</label>
                                    <select class="form-select" id="templateSelect" required>
                                        <option value="">Select a template...</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Email Account Selection -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="emailAccountSelect" class="form-label">From Email Account</label>
                                    <select class="form-select" id="emailAccountSelect" required>
                                        <option value="">Select an email account...</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Recipient Group Selection -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="groupSelect" class="form-label">Recipient Group</label>
                                    <select class="form-select" id="groupSelect" required>
                                        <option value="">Select a recipient group...</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Schedule Time -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="scheduleTime" class="form-label">Schedule Time</label>
                                    <input type="datetime-local" class="form-control" id="scheduleTime">
                                </div>
                            </div>

                            <!-- Subject Line -->
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="subject" class="form-label">Subject Line</label>
                                    <input type="text" class="form-control" id="subject" required>
                                </div>
                            </div>

                            <!-- Email Body -->
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="body" class="form-label">Email Body</label>
                                    <textarea class="form-control" id="body" rows="10" required></textarea>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Send Email
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load templates
            $.get('/api/email-templates', function(data) {
                const templateSelect = $('#templateSelect');
                data.forEach(template => {
                    templateSelect.append(`<option value="${template.id}">${template.name}</option>`);
                });
            });

            // Load email accounts
            $.get('/api/email-accounts', function(data) {
                const accountSelect = $('#emailAccountSelect');
                data.forEach(account => {
                    accountSelect.append(`<option value="${account.email}">${account.email}</option>`);
                });
            });

            // Load recipient groups
            $.get('/api/groups', function(data) {
                const groupSelect = $('#groupSelect');
                data.forEach(group => {
                    groupSelect.append(`<option value="${group.id}">${group.name}</option>`);
                });
            });

            // Handle template selection
            $('#templateSelect').change(function() {
                const templateId = $(this).val();
                if (templateId) {
                    $.get(`/api/email-templates/${templateId}`, function(data) {
                        $('#subject').val(data.subject);
                        $('#body').val(data.body);
                    });
                }
            });

            // Handle form submission
            $('#emailJobForm').submit(function(e) {
                e.preventDefault();
                
                const jobData = {
                    templateId: $('#templateSelect').val(),
                    fromEmail: $('#emailAccountSelect').val(),
                    groupId: $('#groupSelect').val(),
                    subject: $('#subject').val(),
                    body: $('#body').val()
                };

                // Show loading state
                const submitBtn = $(this).find('button[type="submit"]');
                const originalText = submitBtn.html();
                submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Sending...');

                // Send the request
                $.ajax({
                    url: '/api/jobs',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(jobData),
                    success: function(response) {
                        // Show success message
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: 'Email job has been created and queued for sending.',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            // Reset form
                            $('#emailJobForm')[0].reset();
                        });
                    },
                    error: function(xhr) {
                        // Show error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: xhr.responseText || 'Failed to create email job. Please try again.',
                            confirmButtonText: 'OK'
                        });
                    },
                    complete: function() {
                        // Reset button state
                        submitBtn.prop('disabled', false).html(originalText);
                    }
                });
            });
        });
    </script>
}

