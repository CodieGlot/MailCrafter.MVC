@model List<MailCrafter.Domain.EmailTemplateEntity>
@{
    ViewData["Title"] = "Email Templates";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold mb-2" style="background: linear-gradient(45deg, #FF6B00, #FFA500); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Email Templates</h1>
            <p class="text-muted fs-5">Create and manage your email templates for campaigns</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-4">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-envelope-open-text me-3" style="color: #FF6B00; font-size: 1.5rem;"></i>
                    <h2 class="h4 mb-0 fw-bold" style="color: #FF6B00;">Email Templates</h2>
                </div>
                <button class="btn btn-warning text-white px-4 py-2 fw-bold" id="createTemplateButton">
                    <i class="fas fa-plus-circle me-2"></i>Create New Template
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-envelope-open-text" style="font-size: 4rem; color: #FF6B00; opacity: 0.5;"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3" style="color: #FF6B00;">No Email Templates Found</h3>
                    <p class="text-muted mb-4 fs-5">Create your first template to get started with email automation.</p>
                    <button class="btn btn-warning text-white px-4 py-2 fw-bold" id="createTemplateButtonEmpty">
                        <i class="fas fa-plus-circle me-2"></i>Create Your First Template
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="py-3 px-4 fw-bold" style="color: #FF6B00;">Name</th>
                                <th class="py-3 px-4 fw-bold" style="color: #FF6B00;">Subject</th>
                                <th class="py-3 px-4 fw-bold" style="color: #FF6B00;">Placeholders</th>
                                <th class="py-3 px-4 fw-bold" style="color: #FF6B00;">Created</th>
                                <th class="py-3 px-4 text-end fw-bold" style="color: #FF6B00;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var template in Model)
                            {
                                <tr class="hover-lift">
                                    <td class="py-3 px-4 align-middle">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-file-alt me-2" style="color: #FF6B00;"></i>
                                            <span class="fw-medium">@template.Name</span>
                                        </div>
                                    </td>
                                    <td class="py-3 px-4 align-middle fw-medium">@template.Subject</td>
                                    <td class="py-3 px-4 align-middle">
                                        @if (template.Placeholders.Any())
                                        {
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-warning text-white rounded-pill me-2">@template.Placeholders.Count</span>
                                                <span class="text-muted">
                                                    @string.Join(", ", template.Placeholders.Take(3))
                                                    @(template.Placeholders.Count > 3 ? "..." : "")
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td class="py-3 px-4 align-middle">
                                        <span class="text-muted">
                                            <i class="far fa-calendar-alt me-2" style="color: #FF6B00;"></i>
                                            @template.CreatedAt.ToString("MMM dd, yyyy")
                                        </span>
                                    </td>
                                    <td class="py-3 px-4 text-end">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-outline-primary edit-template" data-id="@template.ID">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger delete-template" data-id="@template.ID">
                                                <i class="fas fa-trash-alt me-2"></i>Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Template Editor Modal Container -->
<div id="templateEditorContainer"></div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title fw-bold">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <p class="mb-0 fw-medium">Are you sure you want to delete this email template? This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light px-4" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger px-4 fw-bold" id="confirmDeleteButton">
                    <i class="fas fa-trash-alt me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .tox-tinymce {
            min-height: 350px;
            border-radius: 0.5rem !important;
            border-color: #dee2e6 !important;
        }

        .attachment-item {
            margin-bottom: 0.5rem;
            padding: 0.75rem;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

        .attachment-item:hover {
            background-color: rgba(255, 107, 0, 0.05);
            border-color: #FF6B00;
        }

        .placeholder-badge {
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
            display: inline-block;
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            font-weight: 600;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: 0.375rem;
            background-color: rgba(255, 107, 0, 0.1);
            color: #FF6B00;
        }

        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .hover-lift:hover {
            transform: translateY(-2px);
            background-color: rgba(255, 107, 0, 0.05);
        }

        .btn-outline-warning {
            color: #FF6B00;
            border-color: #FF6B00;
        }

        .btn-outline-warning:hover {
            background-color: #FF6B00;
            border-color: #FF6B00;
            color: white;
        }

        .btn-outline-primary {
            color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
        }

        .table th {
            border-top: none;
        }

        .btn-group .btn {
            padding: 0.5rem 1rem;
        }

        .btn-group .btn:first-child {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .btn-group .btn:last-child {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
    </style>
}

@section Scripts {
    <!-- TinyMCE rich text editor -->
    <script src="https://cdn.tiny.cloud/1/fp68gne0fm77dk16z52wlefky31rcuton3jg0iwlrgmvhv76/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/email-templates.js"></script>
    <script>
        $(document).ready(function() {
            // Handle create template button click for empty state
            $("#createTemplateButtonEmpty").click(function() {
                $("#createTemplateButton").click();
            });
        });
    </script>
}
