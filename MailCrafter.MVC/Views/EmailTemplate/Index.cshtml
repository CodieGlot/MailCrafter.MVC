@model List<MailCrafter.Domain.EmailTemplateEntity>
@{
    ViewData["Title"] = "Email Templates";
}

<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-envelope text-primary me-2"></i>
                    <h2 class="h4 mb-0 text-primary">Email Templates</h2>
                </div>
                <button class="btn btn-primary" id="createTemplateButton">
                    <i class="fas fa-plus-circle me-2"></i>Create New Template
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-envelope-open-text text-muted" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="h5 text-muted mb-3">No Email Templates Found</h3>
                    <p class="text-muted mb-4">Create your first template to get started with email automation.</p>
                    <button class="btn btn-primary" id="createTemplateButtonEmpty">
                        <i class="fas fa-plus-circle me-2"></i>Create Your First Template
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="py-3 px-4">Name</th>
                                <th class="py-3 px-4">Subject</th>
                                <th class="py-3 px-4">Placeholders</th>
                                <th class="py-3 px-4">Created</th>
                                <th class="py-3 px-4 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var template in Model)
                            {
                                <tr>
                                    <td class="py-3 px-4 align-middle">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-file-alt text-primary me-2"></i>
                                            @template.Name
                                        </div>
                                    </td>
                                    <td class="py-3 px-4 align-middle">@template.Subject</td>
                                    <td class="py-3 px-4 align-middle">
                                        @if (template.Placeholders.Any())
                                        {
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-primary rounded-pill me-2">@template.Placeholders.Count</span>
                                                <span class="text-muted">
                                                    @string.Join(", ", template.Placeholders.Take(3))
                                                    @(template.Placeholders.Count > 3 ? "..." : "")
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td class="py-3 px-4 align-middle">
                                        <span class="text-muted">
                                            <i class="far fa-calendar-alt me-1"></i>
                                            @template.CreatedAt.ToString("MMM dd, yyyy")
                                        </span>
                                    </td>
                                    <td class="py-3 px-4 text-end">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-edit edit-template" data-id="@template.ID">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger delete-template" data-id="@template.ID">
                                                <i class="fas fa-trash-alt me-1"></i>Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Template Editor Modal Container -->
<div id="templateEditorContainer"></div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete this email template? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">
                    <i class="fas fa-trash-alt me-1"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .tox-tinymce {
            min-height: 350px;
            border-radius: 0.375rem !important;
        }

        .attachment-item {
            margin-bottom: 0.5rem;
            padding: 0.5rem;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            background-color: #f8f9fa;
        }

        .placeholder-badge {
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
            display: inline-block;
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            font-weight: 600;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: 0.375rem;
            background-color: #e9ecef;
            color: #495057;
        }

        .table > :not(caption) > * > * {
            border-bottom-width: 1px;
        }

        .btn-group .btn {
            padding: 0.375rem 0.75rem;
        }

        .btn-group .btn:first-child {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .btn-group .btn:last-child {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
    </style>
}

@section Scripts {
    <!-- TinyMCE rich text editor -->
    <script src="https://cdn.tiny.cloud/1/fp68gne0fm77dk16z52wlefky31rcuton3jg0iwlrgmvhv76/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="~/js/email-templates.js"></script>
    <script>
        $(document).ready(function() {
            // Handle create template button click for empty state
            $("#createTemplateButtonEmpty").click(function() {
                $("#createTemplateButton").click();
            });
        });
    </script>
}
