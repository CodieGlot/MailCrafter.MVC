@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4 text-white">Welcome to MailCrafter</h1>
        <p class="lead mb-4 text-white">Your Ultimate Email Marketing Solution</p>
        <div class="d-grid d-sm-flex justify-content-sm-center gap-3">
            <a href="/jobs" class="btn btn-warning btn-lg fw-bold hover-lift px-5 py-3 shadow-lg">Create Job</a>
            <a href="/management/email-templates" class="btn btn-outline-light btn-lg fw-bold hover-lift px-5 py-3">Browse Templates</a>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h3 class="card-title h4">Email Jobs</h3>
                    <p class="card-text">Create and manage professional email jobs with our easy-to-use platform.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-paint-brush"></i>
                    </div>
                    <h3 class="card-title h4">Beautiful Templates</h3>
                    <p class="card-text">Choose from a wide range of responsive and customizable email templates.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="card-title h4">Analytics</h3>
                    <p class="card-text">Track your job performance with detailed analytics and insights.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="fw-bold mb-4" style="background: linear-gradient(45deg, #FF6B00, #FFA500); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Why Choose MailCrafter?</h2>
                <ul class="feature-list">
                    <li class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>User-friendly interface</span>
                    </li>
                    <li class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Advanced email automation</span>
                    </li>
                    <li class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Responsive design templates</span>
                    </li>
                    <li class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Real-time analytics</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

