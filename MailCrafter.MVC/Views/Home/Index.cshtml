            opacity: 0.5;
            z-index: 1;
        }

        .hero-section .container {
            position: relative;
            z-index: 2;
        }

        .hero-section h1 {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .feature-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            height: 100%;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #FF6B00 0%, #FFA500 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }

        .icon-wrapper i {
            font-size: 2rem;
            color: white;
        }

        .features-section {
            background: #f8f9fa;
            position: relative;
            overflow: hidden;
        }

        .feature-list {
            list-style: none;
            padding: 0;
            display: inline-block;
            text-align: left;
        }

        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
        }

        .feature-item i {
            color: #FF6B00;
            font-size: 1.5rem;
            margin-right: 1rem;
        }

        .floating {
            animation: float 6s ease-in-out infinite;
        }

        .hover-lift {
            transition: transform 0.3s ease;
        }

        .hover-lift:hover {
            transform: translateY(-3px);
        }

        .btn-warning {
            background: #FF6B00;
            border-color: #FF6B00;
            color: white;
        }

        .btn-warning:hover {
            background: #FFA500;
            border-color: #FFA500;
            color: white;
        }
    </style>
}