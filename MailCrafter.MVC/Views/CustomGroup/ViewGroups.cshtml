@model List<MailCrafter.Domain.CustomGroupEntity>

@{
    ViewData["Title"] = "Manage Groups";
}

<h2>Manage Groups</h2>

@if (!Model.Any())
{
    <p>No groups found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Group Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>@group.GroupName</td>
                    <td>
                        <!-- Add actions like Edit, Delete here -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("AddGroup")" class="btn btn-primary">Add New Group</a>
